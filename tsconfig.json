{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "outDir": "build/",
    "sourceMap": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "removeComments": false,
    "strictNullChecks": true,
    "pretty": true,
    "lib": [ "es2015" ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}